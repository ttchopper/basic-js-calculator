@font-face 
    font-family: 'DS-Digital'
    src url('../fonts/DS-Digital.ttf.woff') format('woff')
    font-weight: normal
    font-style: normal
*
    box-sizing border-box
html 
    height 100%

body
    height 100%
    font: normal 16px/1.2 DS-Digital, Lato, sans-serif
    background-color #4e5860



.calculator-container
    position relative
    height 100%

.calculator
    position absolute
    top 50%
    left 50%
    width 392px
    height 422px;
    transform translate(-50%, -50%)
    background-color: #f2f2f2;
    border-radius: 10px;
    box-shadow: inset 0 -4px 0 rgba(23, 16, 25, 0.2), 0 1px 3px rgba(23, 16, 25, 0.2);
    box-shadow 0 0 10px rgba(0,0,0,0.07), 0 21px 20.2px 0.8px rgba(0,0,0,0.15)
    padding 41px 21px 21px
    
.content-wrapper
    width: 350px;
    margin 0 auto


// Fix ios tel numbers not to be clickable
a[href^=tel] 
    color inherit 
    text-decoration: none 

.calculator-display
    // height: 60px;
    background-color: #1c1c1c;
    border: 1px solid #171019;
    border-radius: 5px 4px 4px 5px;
    box-shadow: inset 0 1px 3px rgba(23, 16, 25, 0.45), 0 2px 0 white;
    padding 0 19px
    font-size 52px
    color #fff
    line-height 60px
    margin-bottom 30px
    text-align right
    transition all .5s
    .intermediate
        height: 20px;
        font-size: 20px;
        /* vertical-align: top; */
        line-height: 20px;
