.inactive
    color: #292929
    
button {
  -webkit-appearance: none;
  -webkit-border-radius: 0;
}
.calculator-keys
    // width auto
    width 350px
        
    // .dot
        // width 75*2 + 17px
        
.key
    // padding 0
    
    width 75px
    height 42px
.key + .key
    // margin-left 16px
.equal-sign
    position relative
    .key
        position: absolute
        top 0
        bottom 0
        // right 0
        // left 0
        height auto
        
.dot
    width 75*2 + 17px
    

.row 
    width 100%
    // display flex
    // flex-direction row
    // justify-content flex-start
    // font-size 0
    padding 0
    button 
        // display inline-block
        // font-size 16px
        // width 25%
        // margin auto
        float left
        font-family Lato, sans-serif
    button
        margin-right: 16px
        margin-bottom 13px
        background-color #f4f4f4
        border: 1px solid #e4e4e4;
        border-radius: 5px 4px 4px 5px;
        color: #666;
        font-size: 20px;
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.9);
        box-shadow: 0px 2px 2px 0px #666
        cursor pointer
        outline none
        &:active
             box-shadow: 0px 0px 0px 0px #666
    button:nth-of-type(4)
        margin 0
        float right
        
.clearfix:before,
.clearfix:after
    content: " "
    display: table


.clearfix:after 
    clear: both




.row:nth-of-type(4) button:nth-of-type(4)
    height 13 + 42 + 42px
    
.row:nth-of-type(4) button:nth-of-type(6)
    width 16 + 75 + 75px